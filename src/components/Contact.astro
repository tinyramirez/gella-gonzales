---
// Contact Section Component
---

<section id="contact" class="py-20 lg:py-32 bg-zinc-950">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-light tracking-wide mb-6">Get In Touch</h2>
      <p class="text-xl text-gray-400 max-w-3xl mx-auto">
        Available for performances, collaborations, and creative projects
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
      
      <!-- Contact Information -->
      <div class="space-y-8">
        <div>
          <h3 class="text-2xl font-light mb-6">Let's Create Together</h3>
          <p class="text-gray-300 leading-relaxed mb-8">
            I'm always interested in new collaborations, performance opportunities, 
            and creative projects. Whether you're looking for a performer, collaborator, 
            or creative consultant, I'd love to hear from you.
          </p>
        </div>

        <!-- Contact Methods -->
        <div class="space-y-6">
          
          <!-- Email -->
          <div class="flex items-center space-x-4">
            <div class="w-12 h-12 bg-white/5 rounded-full flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <div>
              <p class="text-sm text-gray-400 uppercase tracking-wide">Email</p>
              <a href="mailto:hello@gellagonzales.com" class="text-white hover:text-gray-300 transition-colors">
                hello@gellagonzales.com
              </a>
            </div>
          </div>

          <!-- Phone -->
          <div class="flex items-center space-x-4">
            <div class="w-12 h-12 bg-white/5 rounded-full flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
            </div>
            <div>
              <p class="text-sm text-gray-400 uppercase tracking-wide">Phone</p>
              <a href="tel:+1-555-123-4567" class="text-white hover:text-gray-300 transition-colors">
                +1 (555) 123-4567
              </a>
            </div>
          </div>

          <!-- Location -->
          <div class="flex items-center space-x-4">
            <div class="w-12 h-12 bg-white/5 rounded-full flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
            <div>
              <p class="text-sm text-gray-400 uppercase tracking-wide">Location</p>
              <p class="text-white">New York, NY</p>
            </div>
          </div>
        </div>

        <!-- Social Links -->
        <div class="pt-8">
          <p class="text-sm text-gray-400 uppercase tracking-wide mb-4">Follow</p>
          <div class="flex space-x-4">
            <a href="#" class="w-10 h-10 bg-white/5 hover:bg-white/10 rounded-full flex items-center justify-center transition-colors">
              <span class="text-sm">IG</span>
            </a>
            <a href="#" class="w-10 h-10 bg-white/5 hover:bg-white/10 rounded-full flex items-center justify-center transition-colors">
              <span class="text-sm">YT</span>
            </a>
            <a href="#" class="w-10 h-10 bg-white/5 hover:bg-white/10 rounded-full flex items-center justify-center transition-colors">
              <span class="text-sm">TT</span>
            </a>
          </div>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="bg-white/5 rounded-2xl p-8 backdrop-blur-sm">
        <form class="space-y-6">
          
          <!-- Name -->
          <div>
            <label for="name" class="block text-sm text-gray-300 mb-2">Name *</label>
            <input 
              type="text" 
              id="name" 
              name="name" 
              required
              class="w-full px-4 py-3 bg-black/30 border border-white/10 rounded-lg text-white placeholder-gray-500 focus:border-white/30 focus:outline-none transition-colors"
              placeholder="Your full name"
            />
          </div>

          <!-- Email -->
          <div>
            <label for="email" class="block text-sm text-gray-300 mb-2">Email *</label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              required
              class="w-full px-4 py-3 bg-black/30 border border-white/10 rounded-lg text-white placeholder-gray-500 focus:border-white/30 focus:outline-none transition-colors"
              placeholder="your@email.com"
            />
          </div>

          <!-- Project Type -->
          <div>
            <label for="project-type" class="block text-sm text-gray-300 mb-2">Project Type</label>
            <select 
              id="project-type" 
              name="project-type"
              class="w-full px-4 py-3 bg-black/30 border border-white/10 rounded-lg text-white focus:border-white/30 focus:outline-none transition-colors"
            >
              <option value="">Select project type</option>
              <option value="performance">Performance Opportunity</option>
              <option value="collaboration">Collaboration</option>
              <option value="workshop">Workshop/Teaching</option>
              <option value="other">Other</option>
            </select>
          </div>

          <!-- Message -->
          <div>
            <label for="message" class="block text-sm text-gray-300 mb-2">Message *</label>
            <textarea 
              id="message" 
              name="message" 
              rows="5" 
              required
              class="w-full px-4 py-3 bg-black/30 border border-white/10 rounded-lg text-white placeholder-gray-500 focus:border-white/30 focus:outline-none transition-colors resize-none"
              placeholder="Tell me about your project or idea..."
            ></textarea>
          </div>

          <!-- Submit Button -->
          <button 
            type="submit"
            class="w-full px-8 py-4 bg-white text-black font-light rounded-lg hover:bg-gray-200 transition-colors duration-300"
          >
            Send Message
          </button>
        </form>

        <!-- Form Notice -->
        <div class="mt-6 p-4 bg-yellow-500/10 border border-yellow-500/20 rounded-lg">
          <p class="text-xs text-yellow-300">
            ⚠️ Form functionality requires backend setup. Consider using Netlify Forms, Formspree, or similar service.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>