---
// Small top navigation - hidden on homepage
const { pathname } = Astro.url;
const isHomepage = pathname === '/' || pathname === '';
---

{!isHomepage && (
  <nav id="top-nav" aria-label="Top Navigation" class="fixed inset-x-0 top-4 z-50 pointer-events-none">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="flex justify-end pointer-events-auto">
        <a
          href="/"
          class="link-outline"
        >
          Home
        </a>
      </div>
    </div>
  </nav>
)}
